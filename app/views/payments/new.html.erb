<div class="container">
  <div class="row py-4">

    <div class="col">
      <h1>Checkout summary:</h1>
      <h2>Purchase of <strong><%= @purchase.book.title %> by <%= @purchase.book.author%></strong> for <strong><%= humanized_money_with_symbol @purchase.amount %></strong></H2>
      <br><%= cl_image_tag @purchase.book.photo.key, crop: :fit %><br>
      <button id="pay" class="btn btn-primary" style="margin-top: 20px">Pay</button>

      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @purchase.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
