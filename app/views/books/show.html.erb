<div class="container">
  <div class="row">
    <%= link_to "Back to homepage", books_path %>
  </div>

  <div class="row">
      <div class="mt-3">
        <h1><%= @book.title%> (<%= @book.edition_year %>) </h1>
      </div>
  </div>

  <div class="row">
    <p>Author: <%= @book.author %></p>
  </div>

  <div class="row">
    <div class="col-12 col-md-6 col-lg-6">
      <div id="title-image" class="my-3" >

        <div class="rounded">
          <% if @book.photo.attached? %>
            <%= cl_image_tag @book.photo.key, height: 250, width: 230, :crop=>"fit", :style => 'border-radius: 8px;' %>
          <% else %>
            <img src="app/assets/images/marketing-kotler.jpg" alt="#" height= "250px">
          <% end %>
        </div>


        <div class="more-details my-3">
          <h3>Book details:</h3>
          <p>Summary: <%= @book.summary %></p>

          <table>
            <tr>
              <th>Publisher:</th>
              <td> <%= @book.publisher %></td>
            </tr>

            <tr>
              <th>Edition:</th>
              <td> <%= @book.edition_year %></td>
            </tr>

            <tr>
              <th>Language:</th>
              <td> <%= @book.language %></td>
            </tr>

            <tr>
              <th>ISBN:</th>
              <td> <%= @book.ISBN %></td>
            </tr>

            <tr>
              <th>Topic:</th>
              <td> <%= @book.topic %></td>
            </tr>

            <tr>
              <th>Subtopic:</th>
              <td> <%= @book.subtopic %></td>
            </tr>

            <tr>
              <th>Pages:</th>
              <td> <%= @book.pages %></td>
            </tr>
          </table>
        </div>

        <div class="seller-profile my-5">
          <h3>This book is being sold by:</h3>
          <p>Name: <%= @book.user.first_name  %></p>
          <p>Seller's message: <%= @book.user.about_me %></p>
          <p>University: <%= @book.user.university %></p>
          <p>Year of study: <%= @book.user.year_of_study %></p>
        </div>

        <div class="reviews my-5">
          <h3>Reviews about the Seller:</h3>

        </div>

        <div class="location my-5">
          <h3>Location:</h3>
          <p>Delivery method: <%= @book.delivery_method %></p>
          <p>Pickup this book at: <%= @book.selling_address %></p>
            <div id="map" style="width: 100%; height: 50vh;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
        </div>

      </div>
    </div>

    <div class="col-12 col-md-6 col-lg-6">

      <div id="buy-form" class="border rounded p-3 my-3">
        <h2>About the book:</h2>
        <p>Title: <%= @book.title %> </p>
        <p>Author(s): <%= @book.author %></p>
        <p>Edition: <%= @book.edition_year %></p>
        <p>Language: <%= @book.language %></p>

        <p>Delivery method: <%= @book.delivery_method %></p>
        <p>Delivery address: <%= @book.selling_address %></p>

        <h2>Price: <%= humanized_money_with_symbol(@book.correct_price) %></h2>

      <% if @book.user == current_user %>
        <%= link_to 'Edit my book', edit_book_path %>

      <% else %>
        <%= form_tag purchases_path do %>
          <%= hidden_field_tag 'book_id', @book.id %>
          <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
        <% end %>
        
      <% end %>

      </div>

    </div>
  </div>
</div>

