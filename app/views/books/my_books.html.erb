<div class="container">

  <h1 id="titreindexbook" class="text-center"> My books</h1>
  <p class="text-center"> See which books you added to the platform.</p>

  <div class="indexbook-container">
    <div class="cards">
      <% @books.each do |book| %>
      <div class="card" style="width:300px;">


       <% if book.photo.attached? %>
       <%= cl_image_tag book.photo.key, height: 400, width: 300, crop: :fill, :style => 'border-radius: 8px;' %>
       <% else %>
       <img src="https://picsum.photos/400/300" class="card-img-top" src="..." alt="Card image cap" style="border-radius:8px;">
       <% end %>

       <div class="card-body">
        <div class="card-title">
          <h3><%= book.title %></h3>
          <p>Author: <%= book.author %></p>
          <p>Edition year: <%= book.edition_year %></p>
        </div>

        <div>
          <p>Price: <%= book.price %> EUR</p>
          <p>Sold by: <%= book.user.email %> </p>
        </div>

      </div>

      <%= link_to 'View my book', book_path(book) %>
      <%= link_to 'Delete book', book_path(book), method: :delete, data: { confirm: "Are you sure you want to delete this book ?" } %>

    
      <%= link_to "New book", new_book_path %>
  
    </div>
    <% end %>
  </div>
</div>


</div>
