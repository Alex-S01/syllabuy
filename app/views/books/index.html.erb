<div class="container">

  <h1 id="titreindexbook" class="text-center"> Available Books </h1>
  <p class="text-center"> Find the right book for your needs.</p>

  <%= form_tag books_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search for a book" %>
          <%= submit_tag "Search", class: "btn btn-primary", id:"search-button" %>
  <% end %>

  <%= link_to 'Back to Homepage', root_path %>

  <div
     id="map"
     style="width: 100%; height: 500px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="indexbook-container">
    <div class="cards">
      <% @books.each do |book| %>
      <div class="card">

      <% if book.photo.attached? %>
          <%= cl_image_tag book.photo.key, height: 320, width: 264, crop: :fill, :style => 'border-radius: 8px;' %>
      <% else %>
          <img src="https://picsum.photos/300/400" alt="#" height= "320px">
      <% end %>

        <div class="card-body">
          <div class="card-title">
            <h3><%= book.title %></h3>
            <p>Author: <%= book.author %></p>
            <p>Edition year: <%= book.edition_year %></p>
          </div>

          <div>
            <p>Price: <%= book.price %> EUR</p>
            <p>Sold by: <%= book.user.email %> </p>
          </div>

<%= link_to 'More details', book_path(book), :class  => "btn btn-info", :style => "font-size: 12px; border-radius:10px; width: 120px; background:white;opacity:0.9" %>




<% if policy(book).edit? %>
<%=link_to 'Edit', edit_book_path(book) %>

<% end %>

<% if policy(book).edit? %>
<%=link_to 'Destroy', book, method: :delete, data: { confirm:'Are you sure?'} %>
<% end %>




<%= link_to 'Buy this book', new_book_purchase_path(book), :class  => "btn btn-info", :style => "font-size: 12px; border-radius:10px; width: 120px; background:white;opacity:0.9" %>


          </div>
        </div>
      <% end %>
      </div>
    </div>

<% if policy(Book).create? %>
<%=link_to 'Add a new book', new_book_path %>
<% end %>


</div>
