<div class="container">

  <h1 id="titreindexbook" class="text-center"> Available Books </h1>
  <p class="text-center"> Find the right book for your needs.</p>

  <%= form_tag books_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search for a book" %>
          <%= submit_tag "Search", class: "btn btn-primary", id:"search-button" %>
  <% end %>

  <%= link_to 'Back to Homepage', root_path %>

  <div class="indexbook-container">
    <div class="cards">
      <% @books.each do |book| %>
      <div class="card">

      <img src="https://picsum.photos/300/400" alt="#" height= "320px">

        <div class="card-body">
          <div class="card-title">
            <h3><%= book.title %></h3>
            <p>Author: <%= book.author %></p>
            <p>Edition year: <%= book.edition_year %></p>
          </div>

          <div>
          <p>Price: <%= book.price %> EUR</p>
          <p>Sold by: <%= book.user.email %> </p>
          </div>

          </div>
        </div>
      <% end %>
      </div>
    </div>

</div>
