


<body style="background: linear-gradient(0.5turn, #ECFCFF);">

 <div class="cover-banner" style="opacity:0.9;">
  <div class="banner">

   <div class="home-title">
      <h1 class="animate__animated animate__flipInX">Find your university textbooks near you.</h1>
   </div>

   <div class="animate__animated animate__lightSpeedInLeft" id="search-fields">

      <div class="search-bar">
        <%= form_tag books_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search for a book, author, university, ... " %>
      </div>

      <div class="search-button">
        <%= submit_tag "Search", class: "btn btn-primary", id:"search-button", style: "background:#3E64FF;" %>
        <% end %>
      </div>

   </div>
  </div>
 </div>


 <div class="container1"style="background:white; width:70%;">

  <h1 class="text-center"> <br/>Some of our Community's Books </h1>
  <p class="text-center"> Find the right book for your needs.<br/><br/></p>

  <div class="books-home">
    <div style="padding-bottom: 48px;">
      <div class="cards-home">
        <% @books.each do |book| %>
          <%= link_to book_path(book) do %>

            <div class="books-card card-home">

             <% if book.photo.attached? %>
              <%= cl_image_tag book.photo.key, height: 231, width: 154, crop:"fill", style: 'border-radius: 4px;' %>
              <% else %>

                <%= image_tag('books-stack.jpg', height: "231", width: "154", style: "border-radius: 4px;") %>
              <% end %>

              <div class="card-body">

                <div class="card-title" style="color: black; text-decoration: none;">
                  <h3><%= book.title.capitalize %> (<%= book.edition_year %>)</h3>
                  <p>Author: <%= book.author.capitalize %></p>
                  <p style="font-family: Playfair Display; font-size: 18px; font-weight: bold;">â‚¬ <%= book.price %></p>
                </div>
              </div>

            </div>

          <% end %>
        <% end %>
      </div>
    </div>
  </div>

 </div>
<br/>



<div class="container" id="about" style="margin-top: 30px; margin-bottom: 30px">

   <div class="aboutus" style="margin-right: 30px">
      <h1 class="animate__animated animate__fadeInTopLeft" style="font-size:65px;font-family: 'Playfair Display', serif;"> Discover <span style="color:#3E64FF;">Syllabuy</span> and be part of a virtuous circle</h1>
      <p style="font-size:40px;font-family: 'Playfair Display',serif; "> Browse the books of students near you</p>
   </div>

   <div id="image-books-home-page">

      <%= image_tag("books-stack.jpg",height: '450px', width: '570px', style: "border-radius:5px; box-shadow: 0 10px 30px rgba(0,0,0,.1)" ) %>
   </div>


</div>


<div class="d-flex" id="about">
    <div class="container2">  <%= link_to "CREATE AN ACCOUNT",  new_user_registration_path, class: "btn btn-primary" %></div>
     <div class="container2"> <%= link_to "CLICK HERE TO VIEW BOOKS", books_path, class: "btn btn-primary" %></div>
     </div>

     <br/> <br/> <br/>

 <div class="categories" style="background:white;height:300px;width:80%;margin:0 auto;border-radius:10px;">
  <h2><br/>Find books on many topics</h2>

  <div class="category-cards">
   <%= link_to "/books?query=business" do %>
   <div class="card-category">
    <h3>Business</h3>
  </div>
  <% end %>

  <%= link_to "/books?query=law" do %>
  <div class="card-category" id="lawbook">
    <h3>Law</h3>
  </div>
  <% end %>


  <%= link_to "/books?query=art" do %>
  <div class="card-category" id="artbook";>
    <h3>Art</h3>
  </div>
  <% end %>

</div>


<br/><br/>

