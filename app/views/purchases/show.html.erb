<div class="container">
  <div class="row py-4">
    
    <div class="col">
      <h1>Order #<%= @purchase.id %> <small><span class="badge badge-primary"><%= @purchase.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @purchase.created_at.to_date %></li>
        <li><strong>BOOK</strong> <%= @purchase.book.title %></li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @purchase.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>