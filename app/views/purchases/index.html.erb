<div class="container">
  <h1 class="text-center mt-5"> My purchases</h1>
  <p class="text-center"> See your existing purchases.</p>

  <%= link_to 'Back to your dashboard', dashboard_path %>

  <% @purchases.each do |purchase| %>
    <div class="row mt-3">

      <div class="card w-100 p-3" style="box-shadow:0px 15px 20px rgba(0,0,0,0.1);">
        <div class="card-text">
          <h3><%= purchase.book.title %></h3>
          <p>Author: <%= purchase.book.author %></p>
          <h4>Purchase ID: <%= purchase.id %></h4>

          <% if purchase.review.blank? %>
            <%= link_to "Add a review on your purchase", new_user_purchase_review_path(current_user, purchase), class: "btn btn-primary" %>
          <% else %>
            <p>You have already written a review for this purchase.</p>
          <% end %>

        </div>

      </div>
    </div>


  <% end %>

  </div>



</div>

